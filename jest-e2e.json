{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/dtos(|/.*)$": "<rootDir>/libs/dtos/src/$1",
    "^@app/utils(|/.*)$": "<rootDir>/libs/utils/src/$1"
  }
}
